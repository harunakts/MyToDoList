@model Gorev_Yoneticisi.Models.YapilanIsler

@{
    ViewBag.Title = "Plan Oluştur";
}

<h2>Plan Oluştur</h2>
<style>
    select, option {
        width: 280px;
        height: 40px;
    }

    option {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }
</style>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Plan Oluştur</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Aciklama, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Aciklama, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DetayliPlanlama, "Detaylı Planlama", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.DetayliPlanlama, new SelectList(
              new List<Object>{
                   new { value = "Günlük" , text = "Günlük"  },
                   new { value = "Haftalık" , text = "Haftalık" },
                   new { value = "Aylık" , text = "Aylık" },
                },
              "value",
              "text",
               1))

            @Html.ValidationMessageFor(model => model.DetayliPlanlama, "", new { @class = "text-danger" })
        </div>
    </div> 
    <!--<div class="form-group">
        2@Html.LabelFor(model => model.DetayliPlanlama, htmlAttributes: new { 2@class = "control-label col-md-2" })
        <div class="col-md-10">
           2@Html.EditorFor(model => model.DetayliPlanlama, new { htmlAttributes = new { 2@class = "form-control" } })
            1@Html.ValidationMessageFor(model => model.DetayliPlanlama, "", new { 2@class = "text-danger" })
        </div>
    </div> -->

    <div class="form-group">
        @Html.LabelFor(model => model.Durum, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Durum)
                @Html.ValidationMessageFor(model => model.Durum, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Oluştur" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Listeye Geri Dön", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
