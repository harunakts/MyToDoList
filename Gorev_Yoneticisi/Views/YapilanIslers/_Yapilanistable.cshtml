@model IEnumerable<Gorev_Yoneticisi.Models.YapilanIsler>

<div id="ProgressBarPlan">
    <div class="progress">
        <div class="progress-bar" role="progressbar"
             style="width:@(Html.AttributeEncode(ViewBag.Percent))%"></div>
    </div>
    <p>@(ViewBag.Percent)%</p>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Aciklama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DetayliPlanlama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Durum)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!item.Durum)
                {
                    @Html.DisplayFor(modelItem => item.Aciklama)
                }
                else
                {
                <div class="BitenPlan">
                    @Html.DisplayFor(modelItem => item.Aciklama)
                </div>
                }
            </td>
            <td>
                @if (!item.Durum)
                {
                    @Html.DisplayFor(modelItem => item.DetayliPlanlama)
                }
                else
                {
                <div class="BitenPlan">
                    @Html.DisplayFor(modelItem => item.DetayliPlanlama)
                </div>
                }
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.Durum, new { id=item.Id, @class = "DurumKontrol" })
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detay", "Details", new { id = item.Id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<script src="~/Custom_Scripts/AddCheckBoxListener.js"></script>
